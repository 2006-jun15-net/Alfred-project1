@model IEnumerable<ApparelApp.Entities.Entities.Customer>
@{
    ViewData["Title"] = "Index";
}

<h1>Customer Database</h1>
<p>
    <a asp-action="AddCustomer">Add New Customer</a>
</p>
<form asp-controller="Customer" asp-action="Index" method="get">
    <p>
        Search by First or Last name: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />

    </p>

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td>
                    <a asp-action="EditCustomer" asp-route-id="@item.CustId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CustId">Details</a> |
                    <a asp-action="DeleteCustomer" asp-route-id="@item.CustId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

